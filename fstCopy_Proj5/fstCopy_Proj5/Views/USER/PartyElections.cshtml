
@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<div class="cont" style="padding-top: 85px; padding-bottom: 85px; direction : rtls">

    @using (Html.BeginForm("PartyElections", "User", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="row">

            <h2 style="text-align : center">.أهلا بك في صفحة القوائم الحزبية</h2>

            @foreach (var party in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card election-card" style="width: 18rem;">
                        <img src="~/images/localParty.jpg" class="card-img-top" alt="Party Image">
                        <div class="card-body">
                            <h5 class="card-title"> القائمة @*@party.Name*@</h5>
                            <div class="form-check">
                                <label class="form-check-label" style="font-size : 30px" for="party@party.GeneralListingID">
                                    @party.Name
                                </label>
                                <input class="form-check-input" type="radio" name="selectedPartyListId" value="@party.GeneralListingID" id="party@party.GeneralListingID">
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <button type="submit" class="btn btn-primary" onclick="return confirmSubmission();">تأكيد التصويت</button>
    }
</div>
<script>
    function confirmSubmission() {
        return confirm("هل أنت متأكد من التصويت؟");
    }
</script>

<style>
    .election-card {
        background-color: #fff; /* White background */
        color: rgba(0, 0, 0, 1); /* Black text */
        border: none;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        margin: 5rem;
    }

    .row {
        margin-right: 0px;
        margin-left: 14rem;
    }

    .election-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    }

    .card-img-top {
        border-top-left-radius: 8px;
        border-top-right-radius: 8px;
        width: 100%;
        height: 180px; /* Fixed height for images */
        object-fit: cover;
    }


    .card-body {
        text-align: right !important;
        padding-right: 1rem;
        max-height: fit-content;
        height: 7rem;
    }

    .card-title {
        font-size: 18px; /* Adjust title size */
        margin-bottom: 10px;
    }

    .btn-light {
        background-color: #fff;
        color: #dc3545; /* Red text */
        border: none;
        border-radius: 5px;
    }

        .btn-light:disabled {
            background-color: #f8f9fa;
            color: #dc3545;
        }

    .row {
        margin-left: 92px;
    }

    .cont {

      display: flex;
        flex-direction: row-reverse;
        justify-content: center;
    
    }
    
    .btn-primary {
        color: #fff;
        background-color: #337ab7;
        border-color: #2e6da4;
        display: block;  /*Center align button /*/
        margin: 2rem auto;/* / Center align and add margin*/ 
    }

</style>
