@model IEnumerable<fstCopy_Proj5.Models.Ad>

@{
    ViewBag.Title = "Advertisement Admin";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

<h2 class="text-center my-4">Advertisements</h2>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.nationalId)</th>
                <th>@Html.DisplayNameFor(model => model.data)</th>
                <th>@Html.DisplayNameFor(model => model.listId)</th>
                <th>@Html.DisplayNameFor(model => model.partyName)</th>
                <th>@Html.DisplayNameFor(model => model.electionArea)</th>
                <th>@Html.DisplayNameFor(model => model.description)</th>
                <th>@Html.DisplayNameFor(model => model.URL)</th>
                <th>@Html.DisplayNameFor(model => model.status)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.nationalId)</td>
                    <td>@Html.DisplayFor(modelItem => item.data)</td>
                    <td>@Html.DisplayFor(modelItem => item.listId)</td>
                    <td>@Html.DisplayFor(modelItem => item.partyName)</td>
                    <td>@Html.DisplayFor(modelItem => item.electionArea)</td>
                    <td>@Html.DisplayFor(modelItem => item.description)</td>
                    <td>
                        <img src="~/Images/@item.URL" alt="No Image" class="img-thumbnail" width="100" height="100" />
                    </td>
                    <td>
                        <span class="badge badge-@((item.status == "Published") ? "success" : "secondary")">
                            @Html.DisplayFor(modelItem => item.status)
                        </span>
                    </td>
                    <td>
                        <a href="@Url.Action("Details", new { id = item.id })" class="btn btn-info btn-sm mx-1">View</a>
                        <a href="@Url.Action("Delete", new { id = item.id })" class="btn btn-danger btn-sm mx-1">Delete</a>
                        <a href="@Url.Action("Publish", new { id = item.id })" class="btn btn-success btn-sm mx-1">Publish</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<style>
    h2 {
        font-weight: bold;
        color: #333;
        margin-bottom: 20px;
    }

    .table {
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

        .table th, .table td {
            vertical-align: middle;
            text-align: center;
        }

    .thead-dark th {
        background-color: #343a40;
        color: #fff;
    }

    .img-thumbnail {
        border-radius: 8px;
        transition: transform 0.2s ease-in-out;
    }

        .img-thumbnail:hover {
            transform: scale(1.1);
        }

    .badge-success {
        background-color: #28a745;
    }

    .badge-secondary {
        background-color: #6c757d;
    }

    .btn {
        font-size: 0.85rem;
        padding: 5px 10px;
        border-radius: 5px;
    }

    .btn-sm {
        margin: 0 3px;
        transition: all 0.2s ease-in-out;
    }

        .btn-sm:hover {
            transform: scale(1.05);
        }

</style>