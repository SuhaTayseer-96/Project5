@model fstCopy_Proj5.Models.Ad

@{
    ViewBag.Title = "addAdvertisement";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<style>
    .form-container {
        margin: 5rem auto;
        max-width: 800px;
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        direction:rtl;
    }

    .form-header {
        text-align: center;
        margin-bottom: 20px;
    }

    .form-group {
        display: flex;
        align-items: center;
        margin-bottom: 15px;
    }

        .form-group label {
            flex: 0 0 150px;
            margin-right: 10px;
            font-weight: bold;
        }

    .form-control {
        flex: 1;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
        transition: border-color 0.3s ease-in-out;
    }

        .form-control:focus {
            border-color: #007bff;
        }

    .btn-primary {
        display: block;
        width: 100%;
        padding: 10px;
        font-size: 16px;
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s ease-in-out;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .text-danger {
        color: #e3342f;
    }
</style>

