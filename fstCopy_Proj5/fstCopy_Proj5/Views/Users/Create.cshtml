                        <div class="checkbox">
                            @Html.EditorFor(model => model.PartyElections)
                            @Html.ValidationMessageFor(model => model.PartyElections, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.whitePaperLocalElections, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <div class="checkbox">
                            @Html.EditorFor(model => model.whitePaperLocalElections)
                            @Html.ValidationMessageFor(model => model.whitePaperLocalElections, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.whitePaperPartyElections, htmlAttributes: new { @class = "control-label col-md-2" })
