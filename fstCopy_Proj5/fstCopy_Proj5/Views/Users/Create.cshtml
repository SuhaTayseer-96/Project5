                <div class="form-group text-right">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="إنشاء" class="btn btn-danger" />
                    </div>
                </div>
            </div>
        }

        <div class="form-group text-right">
            @Html.ActionLink("العودة إلى القائمة", "Index", null, new { @class = "btn btn-danger" })
        </div>
    </div>
</body>
</html>
