@model fstCopy_Proj5.Models.DATE

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";

}

<h2 class="text-center mb-4">Edit Election Dates</h2>

@using (Html.BeginForm("IndexAdmin", "DATEs"))
{
    @Html.AntiForgeryToken()

    <div class="container">
        <h4>Edit Date</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <div class="form-group row">
            @Html.LabelFor(model => model.startDateNominate, htmlAttributes: new { @class = "col-sm-3 col-form-label" })
            <div class="col-sm-9">
                @Html.EditorFor(model => model.startDateNominate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.startDateNominate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.EndDateNominate, htmlAttributes: new { @class = "col-sm-3 col-form-label" })
            <div class="col-sm-9">
                @Html.EditorFor(model => model.EndDateNominate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.EndDateNominate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.startDateOfElection, htmlAttributes: new { @class = "col-sm-3 col-form-label" })
            <div class="col-sm-9">
                @Html.EditorFor(model => model.startDateOfElection, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.startDateOfElection, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.EndDateOfElection, htmlAttributes: new { @class = "col-sm-3 col-form-label" })
            <div class="col-sm-9">
                @Html.EditorFor(model => model.EndDateOfElection, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.EndDateOfElection, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-9 offset-sm-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
}


