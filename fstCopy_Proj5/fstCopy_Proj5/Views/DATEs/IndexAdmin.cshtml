@model IEnumerable<fstCopy_Proj5.Models.DATE>

@{
    ViewBag.Title = "IndexAdmin";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

<h2 class="text-center mb-4">Election Dates</h2>

<p class="text-right mb-3">
    @Html.ActionLink("Create New", "Create", new { @class = "btn btn-primary" })
</p>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>وقت بداية الترشح</th>
            <th>وقت نهاية الترشح</th>
            <th>وقت بداية الانتخابات </th>
            <th>وقت نهاية الانتخابات</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.startDateNominate)</td>
                <td>@Html.DisplayFor(modelItem => item.EndDateNominate)</td>
                <td>@Html.DisplayFor(modelItem => item.startDateOfElection)</td>
                <td>@Html.DisplayFor(modelItem => item.EndDateOfElection)</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "btn btn-warning btn-sm" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn btn-info btn-sm" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    .table th, .table td {
        text-align: center;
    }

    .table th {
        background-color: #343a40;
        color: #fff;
    }

    .table td a {
        margin: 0 5px;
    }
</style>
