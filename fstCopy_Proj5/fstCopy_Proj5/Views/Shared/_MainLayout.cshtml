      <script src="https://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.3/html5shiv.min.js"></script>
    <![endif]-->
    <!-- The styles -->
    <link href="@Url.Content("/Content/libs/bootstrap/styles/bootstrap.min.css")" rel="stylesheet" type="text/css">
    <link href="@Url.Content("/Content/libs/font-awesome/font-awesome.min.css")" rel="stylesheet" type="text/css">
    <link href="@Url.Content("/Content/libs/animate/styles/animate.css")" rel="stylesheet" type="text/css">
    <link href="@Url.Content("/Content/libs/owl.carousel/styles/owl.carousel.css")" rel="stylesheet" type="text/css">
