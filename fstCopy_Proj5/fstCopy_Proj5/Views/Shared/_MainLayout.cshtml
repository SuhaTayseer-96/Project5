                    <div class="col-lg-12">
                        <div class="about-footer">
                            <div class="row">
                                <div class="col-lg-10 col-lg-offset-1">
                                    <figure>
                                        <img src="@Url.Content("~/images/loginimg.png")" alt="الشعار">
                                    </figure>
                                    <p>
