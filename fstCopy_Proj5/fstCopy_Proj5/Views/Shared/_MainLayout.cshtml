                                    <li>@Html.ActionLink("طلب الترشح الحزبي", "GeneralListCandidates", "GeneralListings")</li>
                                    <li>@Html.ActionLink("طلب الإعلان", "addAdvertisement", "Ads")</li>
                                    <li>@Html.ActionLink("طلب المناظرات", "Create", "Debates1")</li>
