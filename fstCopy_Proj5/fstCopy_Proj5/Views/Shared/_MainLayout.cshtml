                            <span class="icon-bar"></span>
                        </button>
                        <a class="logo" href="@Url.Action("Index", "Home")">
                            <img alt="" src="@Url.Content("/images/logo.png")">
                        </a>
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav navbar-right">
                            <li>@Html.ActionLink("من نحن", "About", "Home")</li>
                            <li>@Html.ActionLink("تواصل معنا", "CreateContact", "Contact")</li>
                            <li>@Html.ActionLink("الأسئلة الشائعة", "Faq", "Home")</li>
