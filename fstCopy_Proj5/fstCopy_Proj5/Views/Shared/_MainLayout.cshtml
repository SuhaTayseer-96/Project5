                            <div class="footer-subscription">
                                <input id="mc4wp_email" class="form-control" placeholder="أدخل بريدك الإلكتروني" name="EMAIL" type="email">
                                <input class="btn btn-default" value="اشترك الآن" type="submit">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-12">
                        <div class="footer-widget">
                            <div class="footer-widget-header">
                                <h3>روابط مباشرة</h3>
                            </div>
                            <ul class="footer-useful-links">
                                <li>@Html.ActionLink("الصفحة الرئيسية", "Index", "Home")</li>
                                <li>@Html.ActionLink("من نحن", "About", "Home")</li>
