@model IEnumerable<fstCopy_Proj5.Models.Debate>

@{
    ViewBag.Title = "IndexDebatesHome";
}

<div class="container mt-4">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card shadow-sm border-light">
                    <div class="card-body">
                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.Date_Of_Debate)</h5>
                        <p class="card-text"><strong>الموضوع :</strong> @Html.DisplayFor(modelItem => item.Topic)</p>
                        <p class="card-text"><strong>المرشح الأول :</strong> @Html.DisplayFor(modelItem => item.First_Candidate)</p>
                        <p class="card-text"><strong>قائمة المرشح الأول :</strong> @Html.DisplayFor(modelItem => item.First_Candidate_List)</p>
                        <p class="card-text"><strong>المرشح الثاني :</strong> @Html.DisplayFor(modelItem => item.Second_Candidate)</p>
                        <p class="card-text"><strong>قائمة المرشح الثاني :</strong> @Html.DisplayFor(modelItem => item.Second_Candidate_List)</p>
                        <p class="card-text">
                            <strong>رابط الزوم :</strong>
                            <a href="@item.Zoom_link" target="_blank" class="text-primary" style="text-decoration: none;">
                                @item.Zoom_link
                            </a>
                        </p>
                    </div>
                    <div class="card-footer text-muted">
                        <small>Last updated on @item.Date_Of_Debate</small>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
