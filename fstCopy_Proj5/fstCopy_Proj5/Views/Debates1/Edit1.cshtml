@*@model IEnumerable<fstCopy_Proj5.Models.Debate>*@

@{
    ViewBag.Title = "Index";
}

<head>
    <style>
        body {
            background-color: #f8f9fa; /* لون الخلفية للصفحة */
        }

        h2 {
            color: #007bff; /* لون العنوان */
            margin-bottom: 20px;
        }

        .table {
            background-color: #ffffff;
            border: 1px solid #dee2e6;
            border-radius: 0.25rem;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
        }

            .table th {
                background-color: #007bff;
                color: #ffffff;
                text-align: center;
            }

            .table td {
                text-align: center;
            }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #004085;
            }

        /* أنماط البطاقة */
        .card {
            transition: background-color 0.3s ease;
            background-color: #ff0000;
        }

            .card:hover {
                background-color: #e0f7fa; /* لون الخلفية عند التحويم */
            }
    </style>
</head>

<body>
    <div class="container">
        <h2 class="text-center my-4">boteto</h2>

        <p class="text-center">
            @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary mb-3" })
        </p>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>
                        رقم الدائرة
                    </th>
                    <th>
                        تاريخ المناظرة
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Topic)
                    </th>
                    <th>
                        المرشح الأول
                    </th>
                    <th>
                        قائمة المرشح الأول
                    </th>
                    <th>
                        المرشح الثاني
                    </th>
                    <th>
                        قائمة المرشح الثاني
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Circle_ID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date_Of_Debate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Topic)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.First_Candidate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.First_Candidate_List)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Second_Candidate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Second_Candidate_List)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                            @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>