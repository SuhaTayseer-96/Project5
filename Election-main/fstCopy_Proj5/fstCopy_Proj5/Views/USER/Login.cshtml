@model fstCopy_Proj5.Models.User

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="login-container">
    <div class="login-form">
        <h2 class="login-title">تسجيل الدخول</h2>

        @using (Html.BeginForm("Login", "User", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <!-- Add image inside the form -->
            <div class="login-image-container">
                <img src="~/images/c221a1e2c34a0c95.jpg" alt="Login Image" class="login-image" />
            </div>
            <div class="form-group">
                <label>الرقم الوطني</label>
                @Html.TextBoxFor(model => model.NationalNumber, new { @class = "form-control", placeholder = "أدخل الرقم الوطني" })
                @Html.ValidationMessageFor(model => model.NationalNumber, "", new { @class = "text-danger" })
            </div>


            <button type="submit" class="btn btn-submit">تسجيل الدخول</button>
        }

        @if (ViewBag.Emailsent != null)
        {
            <div class="alert alert-success">
                @ViewBag.Emailsent
            </div>
        }

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    </div>
</div>

